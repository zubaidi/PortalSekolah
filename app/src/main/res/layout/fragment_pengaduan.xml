<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PengaduanFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/infoPengaduan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardElevation="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="INFORMASI PENGADUAN"
            android:textSize="16dp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/infoPengaduan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#0081A7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="9dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sarana Prasarana"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaduan tentang prasarana yang kurang memuaskan"
                android:textColor="#FFF"
                android:textSize="12dp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lihatDetailPengaduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Detail >>"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="italic"
            android:fontFamily="@font/roboto"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>